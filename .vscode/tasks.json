{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "LaTeX: build",
      "type": "shell",
      "command": "make -C setup pdf",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "LaTeX: watch",
      "type": "shell",
      "command": "make -C setup watch",
      "problemMatcher": []
    },
    {
      "label": "LaTeX: clean",
      "type": "shell",
      "command": "make -C setup clean",
      "problemMatcher": []
    },
    {
      "label": "PPTX: create demo",
      "type": "shell",
      "command": "make -C examples/pptx-editor demo-pptx",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "PPTX: render equation",
      "type": "shell",
      "command": "make -C examples/pptx-editor render-equation EQN=\"${input:equation}\" OUT=\"${input:outputPng}\"",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "equation",
      "type": "promptString",
      "description": "LaTeX equation string (no $ delimiters)",
      "default": "E = mc^2"
    },
    {
      "id": "outputPng",
      "type": "promptString",
      "description": "Output PNG file path",
      "default": "/tmp/equation.png"
    }
  ]
}
